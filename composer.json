{
    "config": {
        "sort-packages": true
    },
    "require":{
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "zendframework/zend-diactoros": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/Framework/"
        }
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit --colors=always"
    }
}
